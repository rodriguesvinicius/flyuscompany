    <!-- card do formulário do usuário -->
    <div class="card-body" style="width: 50vw; height:75vh; margin-top: 130px;  margin-left: 280px; background-color: white">
        <div>
            <h3 class="font-weight" style="text-align: center; ">Minha conta</h3>
        </div>
        <br>
        <form>
            <div class="form-row">
                <div class="form-group col-lg-7">
                    <label for="inputName">Nome</label>
                    <input type="email" class="form-control" id="inputEmail4" value="{{user.nomeUsuario}}">
                </div>
                <div class="form-group col-lg-5">
                    <label for="input">CPF/CNPJ</label>
                    <input type="" class="form-control" id="inputPassword4" value="{{user.cnpjCpfUsuario}}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-7">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="inputEmail4" value="{{user.emailUsuario}}">
                </div>
                <div class="form-group col-lg-5">
                    <label for="inputPassword4">Senha</label>
                    <input type="password" class="form-control" id="inputPassword4">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-9">
                    <label for="inputAddress">Endereço</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" value="{{user.ruaUsuario}}">
                </div>
                <div class="form-group col-lg-3">
                    <label for="inputAddress">N°</label>
                    <input type="number" class="form-control" id="inputAddress" placeholder="N°" value="{{user.numRuaUsuario}}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="inputCity">Cidade</label>
                    <input type="text" class="form-control" id="inputCity" value="{{user.cidadeUsuario}}">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputState">Estado</label>
                    <input type="text" class="form-control" id="inputCity" value="{{user.estadoUsuario}}">
                </div>
            </div>
            <center>
                <button type="button" class="btn btn-warning btn-rounded text-white">
                    Editar informações</button>
            </center>
        </form>

    </div>